---
import NavBar from "./NavBar.astro";
import Card from "./Card.astro";
---

<header class="header-wrapper">
  <div class="header-content">
    <NavBar />
    <div class="width-page header-presentation">
      <h1 class="title">Escuela de Educación</h1>
      <h1 class="title">Técnica Profesional 275</h1>
      <h2>Almirante Guillermo Brown</h2>
    </div>
  </div>
  <Card
    className="absolute"
    title="+300 alumnos"
    description="Día a día +300 alumnos confian en nuestra institución."
    size="fit"
  />
</header>

<style>
  .header-wrapper {
    position: relative;
    height: 100vh;
    width: 100%;
  }

  .header-content {
    height: 100%;
    position: relative;
    background-image: linear-gradient(
        to bottom,
        var(--accent-color) 20%,
        transparent 80%
      ),
      url("/assets/img/header-background.jpg");
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center top;
    overflow: hidden;
    border-radius: 100% 0% 100% 0% / 0% 69% 31% 100%;
  }

  .header-content::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 1;
  }

  .header-presentation {
    position: relative;
    height: calc(100vh - 200px);
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    z-index: 2;
  }

  .title {
    font-size: var(--font-size-ultrabig);
    color: var(--light-color);
  }

  .header-presentation h2 {
    font-size: var(--font-size-big);
    color: var(--primary-color-dark);
  }
</style>
