---
import { config } from "../../config";

const pages = [
  { label: "Inicio", href: "/", especial: false },
  { label: "Otro", href: "#", especial: false },
  { label: "Inscribirme", href: "/inscribirme", especial: true },
];
---

<nav class="width-page nav-bar">
  <img src={config.icon} alt="EETP 275 Logo" height="100" />
  <ul class="nav-bar-list">
    {
      pages.map((page) => (
        <li class={`nav-bar-list_item ${page.especial && "especial"}`}>
          <a href={page.href}>{page.label}</a>
        </li>
      ))
    }
  </ul>
</nav>

<style>
  .nav-bar {
    padding: 10px 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: var(--font-size-small);
    z-index: 3;
    position: relative;
  }

  .nav-bar-list {
    list-style: none;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .nav-bar-list_item {
    padding: 10px;
    text-decoration: none;
    color: var(--light-color);
    cursor: pointer;
    border-radius: 3px;
  }

  .nav-bar-list_item.especial {
    background: var(--primary-color-dark);
    color: var(--light-color);
    transition: background 0.3s ease-in-out;
  }

  .nav-bar-list_item.especial:hover {
    background: var(--primary-color);
  }

  .nav-bar-list_item a {
    color: inherit;
    text-decoration: none;
  }
</style>
